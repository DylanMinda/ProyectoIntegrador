@model Spotify.Modelos.Cancion
@{
    ViewData["Title"] = "Reproductor";
}
<link rel="stylesheet" href="~/css/songPlayer.css?v=@DateTime.Now.Ticks">

<div class="player-container">
    <div class="player-header">
        <div class="header-glow"></div>
        <h1 class="player-title">
            <i class="fas fa-play-circle"></i>
            <span class="highlight">REPRODUCTOR</span>
        </h1>
        <div class="song-meta">
            <span class="meta-item">
                <i class="fas fa-music"></i>
                Ahora reproduciendo
            </span>
            @if (ViewBag.EsPlanGratuito)
            {
                <span class="meta-item plan-info">
                    <i class="fas fa-info-circle"></i>
                    Plan Gratuito - Reproducciones restantes: @ViewBag.ReproduccionesRestantes
                </span>
            }
        </div>
    </div>

    <div class="player-card">
        <div class="album-art-section">
            <div class="album-art-container">
                <div class="album-art">
                    <div class="vinyl-record">
                        <div class="vinyl-center"></div>
                        <div class="vinyl-line"></div>
                        <div class="vinyl-line"></div>
                        <div class="vinyl-line"></div>
                    </div>
                </div>
                <div class="art-glow"></div>
            </div>
        </div>

        <div class="song-info-section">
            <div class="song-details">
                <h2 class="song-title">@Model.Titulo</h2>
                <h3 class="song-artist">@Model.ArtistaCodigoNav?.Nombre</h3>
                <div class="song-stats">
                    <span class="stat-item">
                        <i class="fas fa-clock"></i>
                        @Model.Duracion.ToString(@"mm\:ss")
                    </span>
                </div>
            </div>

            <!-- Reproductor de audio nativo -->
            <div class="song-player">
                @if (ViewBag.EsPlanGratuito)
                {
                    <!-- Para usuarios gratuitos: reproductor con limitaciones -->
                    <audio controls preload="metadata" controlslist="nodownload">
                        <source src="@Model.ArchivoUrl" type="audio/mp3" />
                        Tu navegador no soporta el elemento de audio.
                    </audio>

                    <div class="plan-limitation-notice">
                        <p><i class="fas fa-exclamation-triangle"></i> Plan Gratuito: Reproducciones limitadas y pausas publicitarias</p>
                        <a href="@Url.Action("Index", "Planes")" class="btn btn-premium">
                            <i class="fas fa-crown"></i> Upgrade a Premium
                        </a>
                    </div>
                }
                else
                {
                    <!-- Para usuarios premium: reproductor completo -->
                    <audio controls preload="auto">
                        <source src="@Model.ArchivoUrl" type="audio/mp3" />
                        Tu navegador no soporta el elemento de audio.
                    </audio>

                    <div class="premium-features">
                        <p><i class="fas fa-crown"></i> Usuario Premium: Sin limitaciones</p>
                       
                    </div>
                }
            </div>

            <!-- Visualizador (solo decorativo sin JS) -->
            <div class="visualizer-section">
                <div class="audio-visualizer">
                    <div class="visualizer-bar"></div>
                    <div class="visualizer-bar"></div>
                    <div class="visualizer-bar"></div>
                    <div class="visualizer-bar"></div>
                    <div class="visualizer-bar"></div>
                    <div class="visualizer-bar"></div>
                    <div class="visualizer-bar"></div>
                    <div class="visualizer-bar"></div>
                    <div class="visualizer-bar"></div>
                    <div class="visualizer-bar"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="additional-info">
        <div class="info-card">
            <h4><i class="fas fa-info-circle"></i> Información de la Canción</h4>
            <div class="info-grid">
                <div class="info-item">
                    <label>Título:</label>
                    <span>@Model.Titulo</span>
                </div>
                <div class="info-item">
                    <label>Artista:</label>
                    <span>@Model.ArtistaCodigoNav?.Nombre</span>
                </div>
                <div class="info-item">
                    <label>Duración:</label>
                    <span>@Model.Duracion.ToString(@"mm\:ss")</span>
                </div>
                <div class="info-item">
                    <label>Estado:</label>
                    <span>@(ViewBag.EsPlanGratuito ? "Free" : "Premium")</span>
                </div>
            </div>
        </div>

        @if (ViewBag.EsPlanGratuito)
        {
            <div class="plan-limitation-notice">
                <p><i class="fas fa-exclamation-triangle"></i> Plan Gratuito: Reproducciones limitadas y pausas publicitarias.</p>
                <p>Reproducción restante: @ViewBag.ReproduccionesRestantes</p>
            </div>
            <!-- Aquí puedes mostrar un mensaje de pausa publicitaria -->
            <div class="pause-message">
                @if (ViewBag.PauseMessage != null)
                {
                    <p>@ViewBag.PauseMessage</p>
                }
            </div>
        }
    </div>

    <div class="button-group">
        <a href="javascript:history.back()" class="btn btn-secondary-custom">
            <i class="fas fa-arrow-left"></i>
            VOLVER
        </a>
        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary-custom">
            <i class="fas fa-home"></i>
            INICIO
        </a>
    </div>
</div>

@if (ViewBag.EsPlanGratuito)
{
    <!-- Meta refresh para simular pausas publicitarias (opcional) -->
    <noscript>
        <meta http-equiv="refresh" content="45;url=@Url.Action("Player", new { id = Model.Id })">
    </noscript>
}