<!-- Views/Planes/MiPlan.cshtml - Vista sin JavaScript, solo formularios HTML -->
@model Spotify.Modelos.Usuario
@{
    ViewData["Title"] = "Mi Plan";
}
<div class="container mt-4">
    <h2>Mi Plan Actual</h2>
    <link rel="stylesheet" href="~/css/planes-general.css" />

    <!-- Mostrar mensajes de TempData -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-info">
            @ViewBag.Mensaje
            <br>
            <a href="@Url.Action("Index")" class="btn btn-primary mt-2">Ver Planes Disponibles</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <!-- Información básica del plan -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Información del Plan</h5>
                    </div>
                    <div class="card-body">
                        <h4>@Model.Plan.Nombre</h4>
                        <p><strong>Precio:</strong> $@Model.Plan.PrecioMensual/mes</p>
                        <p><strong>Descripción:</strong> @Model.Plan.Descripcion</p>

                        @if (Model.Plan.MaximoUsuarios > 1)
                        {
                            <p><strong>Tipo:</strong> Plan Grupal (hasta @Model.Plan.MaximoUsuarios usuarios)</p>
                            <p><strong>Usuarios actuales:</strong> @ViewBag.CantidadMiembros/@Model.Plan.MaximoUsuarios</p>

                            @if (ViewBag.EsAdministrador)
                            {
                                <div class="alert alert-success">
                                    <h6><i class="fas fa-crown"></i> Eres el Administrador de este plan</h6>
                                    <p>
                                        <strong>Tu código de invitación:</strong>
                                        <span class="badge badge-primary">@ViewBag.CodigoInvitacion</span>
                                    </p>
                                    <p><small class="text-muted">Comparte este código con las personas que quieras invitar</small></p>

                                    <!-- Formulario para compartir código -->
                                    <form method="get" action="@Url.Action("CompartirCodigoInvitacion")" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-share"></i> Obtener Código para Compartir
                                        </button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <h6><i class="fas fa-users"></i> Miembro del plan grupal</h6>
                                    <p><strong>Administrador:</strong> @ViewBag.Administrador.Nombre</p>
                                </div>
                            }
                        }
                        else
                        {
                            <p><strong>Tipo:</strong> Plan Individual</p>
                        }
                    </div>
                </div>

                <!-- Acciones disponibles -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Acciones Disponibles</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Plan.MaximoUsuarios > 1)
                        {
                            <!-- Acciones para planes grupales -->
                            <div class="btn-group-vertical d-block mb-2">
                                <a href="@Url.Action("MiembrosDelPlan")" class="btn btn-info mb-2">
                                    <i class="fas fa-users"></i> Ver y Gestionar Miembros
                                </a>

                                @if (ViewBag.EsAdministrador)
                                {
                                    

                                    <!-- Cancelar Plan Completo -->
                                    <form method="post" action="@Url.Action("CancelarPlan")" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger mb-2"
                                                onclick="return confirm('¿Estás seguro de que quieres cancelar este plan? Todos los miembros serán movidos al plan gratuito.')">
                                            <i class="fas fa-times-circle"></i> Cancelar Plan Completo
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <!-- Abandonar Plan -->
                                    <form method="post" action="@Url.Action("AbandonarPlan")" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-warning mb-2"
                                                onclick="return confirm('¿Estás seguro de que quieres abandonar este plan? Serás movido al plan gratuito.')">
                                            <i class="fas fa-sign-out-alt"></i> Abandonar Plan
                                        </button>
                                    </form>
                                }
                            </div>
                        }
                        else
                        {
                            <!-- Acciones para plan individual -->
                            <div class="btn-group-vertical d-block mb-2">
                              

                                <!-- Cancelar Plan Individual -->
                                <form method="post" action="@Url.Action("CancelarPlan")" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger mb-2"
                                            onclick="return confirm('¿Estás seguro de que quieres cancelar este plan?')">
                                        <i class="fas fa-times-circle"></i> Cancelar Plan
                                    </button>
                                </form>
                            </div>
                        }

                        <a href="@Url.Action("Index")" class="btn btn-secondary mb-2">
                            <i class="fas fa-list"></i> Ver Otros Planes
                        </a>

                    </div>
                </div>

                <!-- Sección para unirse a un plan (si no tiene plan de pago) -->
                @if (Model.Plan.PrecioMensual == 0)
                {
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5>¿Tienes un código de invitación?</h5>
                        </div>
                        <div class="card-body">
                       

                            <!-- Formulario para unirse al plan -->
                            <form method="post" action="@Url.Action("UnirseAPlan")">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="codigoInvitacionUnirse">O únete directamente:</label>
                                    <input type="text" class="form-control" name="codigoInvitacion"
                                           placeholder="Código de invitación" maxlength="8" required>
                                </div>
                                <button type="submit" class="btn btn-success"
                                        onclick="return confirm('¿Estás seguro de que quieres unirte a este plan?')">
                                    <i class="fas fa-user-plus"></i> Unirse al Plan
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                <!-- Información de la cuenta -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Mi Cuenta</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Usuario:</strong> @Model.Nombre</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p>
                            <strong>Saldo actual:</strong>
                            <span class="badge badge-@(Model.Saldo >= 10 ? "success" : "warning")">
                                $@(Model.Saldo ?? 0)
                            </span>
                        </p>
                        <p><strong>Fecha de registro:</strong> @Model.FechaRegistro.ToString("dd/MM/yyyy")</p>

                        <a href="@Url.Action("RecargarSaldo")" class="btn btn-primary btn-sm btn-block">
                            <i class="fas fa-credit-card"></i> Recargar Saldo
                        </a>
                    </div>
                </div>

                @if (Model.Plan.MaximoUsuarios > 1 && ViewBag.EsAdministrador)
                {

                    <!-- Funciones de administrador -->
                    <div class="card">
                        <div class="card-header">
                            <h6>Administración del Plan</h6>
                        </div>
                        <div class="card-body">
                           
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>